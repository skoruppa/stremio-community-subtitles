# ============================================
# REQUIRED - Flask Configuration
# ============================================
FLASK_ENV=production
FLASK_RUN_PORT=4949
# SECRET_KEY is used for session encryption and password hashing
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=changeme_secret_key_min_32_chars

# ============================================
# REQUIRED - Database Configuration
# SQLite by default (no setup needed)
# For MySQL/MariaDB, uncomment and configure below
# ============================================
#DATABASE_URL=mysql+pymysql://user:password@localhost:3306/dbname

# ============================================
# Email Configuration (OPTIONAL for self-hosting)
# Set DISABLE_EMAIL_VERIFICATION=true to skip email setup
# ============================================
DISABLE_EMAIL_VERIFICATION=true

# If you want email verification, set these and disable the flag above:
#DISABLE_EMAIL_VERIFICATION=false
#MAIL_SERVER=smtp.gmail.com
#MAIL_PORT=587
#MAIL_USE_TLS=True
#MAIL_USERNAME=your-email@gmail.com
#MAIL_PASSWORD=your-app-password

# ============================================
# OPTIONAL - Cloudinary (for cloud storage)
# If not set, subtitles will be stored locally
# ============================================
#CLOUDINARY_CLOUD_NAME=your-cloud-name
#CLOUDINARY_API_KEY=your-api-key
#CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# OPTIONAL - TMDB API (for metadata)
# ============================================
#TMDB_API_KEY=your-tmdb-api-key

# ============================================
# OPTIONAL - MyAnimeList API (for anime metadata)
# ============================================
#MAL_CLIENT_ID=your-mal-client-id

# ============================================
# OPTIONAL - Better Stack Logging
# ============================================
#BETTERSTACK_SOURCE_TOKEN=your-betterstack-token

# ============================================
# OPTIONAL - URL Scheme
# ============================================
PREFERRED_URL_SCHEME=https
